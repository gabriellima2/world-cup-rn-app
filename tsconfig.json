{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
			"@services/*": ["./src/services/*"],
			"@models/*": ["./src/models/*"],
			"@mocks/*": ["./src/mocks/*"],
			"@utils/*": ["./src/utils/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@globalTypes/*": ["./src/@types/*"],
			"@styles/*": ["./src/styles/*"],
			"@contexts/*": ["./src/contexts/*"],
			"@schemas/*": ["./src/schemas/*"],
		},
  },
	"typeRoots": ["./types"],
  "extends": "expo/tsconfig.base"
}
